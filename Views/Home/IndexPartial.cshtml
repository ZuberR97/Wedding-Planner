@using Wedding_Planner.Models
@model User

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Login and Registration</title>
    </head>
    <body>
        <h3>Login</h3>
        <form asp-action="LoginUser" asp-controller="Home" method="post">
            <span asp-validation-for="Email"></span>
            <p>Email:</p>
            <input asp-for="Email"><br>
            <span asp-validation-for="Password"></span>
            <p>Password:</p>
            <input asp-for="Password"><br>
            <input class="regboxsubmit" type="submit" value="Login">
        </form>
    </body>
</html>